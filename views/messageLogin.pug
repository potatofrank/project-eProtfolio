doctype html
html
    head
        title= "login to view sheets"
        link(rel='stylesheet', href='/stylesheets/login.css')
    body
        .login
            h1 Please log in to send messages
            h2 if you don't have an account, register
            if (message)
                if (error.length > 0)
                    div.alert.alert-danger #{error}
            if (errorMessage)
                div.alert.alert-danger #{errorMessage}
            if (successMessage)
                div.alert.alert-success #{successMessage}

            form(action='/users/musicLogin', method='POST')
                .form-group
                    label(for='email') Email
                    input#email.form-control(type='email', name='email', placeholder='Enter Email')
                .form-group
                    label(for='password') Password
                    input#password.form-control(type='password', name='password', placeholder='Enter Password')
                button.btn.btn-primary(type='submit') Login
                p
                | No Account?
                a(href='/users/messages') Register
                br
                a(href='/') Return to homepage