extends layout
block head
    link(rel='stylesheet', href='/stylesheets/dashboard.css')
block content
    body
        .login
            if(user.isAdmin)
                h7 Welcome Admin #{user.first_name} #{user.family_name}
                br
                br
                //h7 #{user.first_name} #{user.family_name}
            else
                h7 Welcome visitor #{user.first_name} #{user.family_name}
                //h7 #{user.first_name} #{user.family_name}
            h0 This is your dashboard
            if(user.isAdmin)
                h0
                    br
                    a1(href='/upload') Upload Files
                    br
                    a1(href='/link/uploadLink') Upload Links
                    br
                    a1(href='/users/mymessages') Check messages
            if (message)
                if (error.length > 0)
                    div.alert.alert-danger #{error}
            if (errorMessage)
                div.aldoctype html
        .button